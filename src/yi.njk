<script>
// B站视频懒加载控制
document.querySelectorAll('.bili-lite').forEach(card => {
  const bvid = card.dataset.bvid;
  const page = card.dataset.page || 1;

  function loadBiliIframe() {
    // 停止所有其他正在播放的视频
    document.querySelectorAll('.bili-lite.is-playing').forEach(otherCard => {
      if (otherCard !== card) {
        stopVideo(otherCard);
      }
    });

    // 如果当前视频已经在播放，则停止它
    if (card.classList.contains('is-playing')) {
      stopVideo(card);
      return;
    }

    const src = `https://player.bilibili.com/player.html` +
      `?bvid=${encodeURIComponent(bvid)}` +
      `&page=${encodeURIComponent(page)}` +
      `&danmaku=0` +           // 关闭弹幕
      `&autoplay=1` +          // 点击后自动播放
      `&high_quality=1` +      // 高清优先
      `&t=0`;                  // 从0秒开始播放

    const iframe = document.createElement('iframe');
    iframe.src = src;
    iframe.allow = 'autoplay; fullscreen; picture-in-picture; clipboard-write';
    iframe.setAttribute('allowfullscreen', '');
    iframe.setAttribute('referrerpolicy', 'no-referrer');
    card.classList.add('is-playing');
    card.appendChild(iframe);
  }

  function stopVideo(cardElement) {
    // 移除播放状态
    cardElement.classList.remove('is-playing');
    
    // 移除iframe
    const iframe = cardElement.querySelector('iframe');
    if (iframe) {
      iframe.remove();
    }
  }

  // 点击封面或按钮加载
  card.addEventListener('click', e => {
    loadBiliIframe();
  });
});

// 页面加载完成后初始化
document.addEventListener('DOMContentLoaded', function() {
  // 为body添加yi-page类
  document.body.classList.add('yi-page');
  
  // 只隐藏水平滚动条，保持垂直滚动
  document.documentElement.style.overflowX = 'hidden';
  document.body.style.overflowX = 'hidden';
  
  // 添加滚动监听
  let currentVideoIndex = 0;
  const videoSections = document.querySelectorAll('.video-section');
  const totalVideos = videoSections.length;
  
  // 滚动到指定视频
  function scrollToVideo(index) {
    if (index >= 0 && index < totalVideos) {
      const targetSection = videoSections[index];
      targetSection.scrollIntoView({ 
        behavior: 'smooth',
        block: 'start'
      });
      currentVideoIndex = index;
      
      // 控制回到顶部按钮的显示
      const backToTopBtn = document.getElementById('backToTop');
      if (backToTopBtn) {
        // 当滚动到2024年视频（索引1）或更后面的视频时显示按钮
        if (index >= 1) {
          backToTopBtn.classList.add('is-visible');
        } else {
          backToTopBtn.classList.remove('is-visible');
        }
      }
    }
  }
  
  // 鼠标滚轮事件
  let isScrolling = false;
  document.addEventListener('wheel', function(e) {
    if (isScrolling) return;
    
    isScrolling = true;
    setTimeout(() => { isScrolling = false; }, 1000);
    
    if (e.deltaY > 0) {
      // 向下滚动 - 下一个视频
      scrollToVideo(currentVideoIndex + 1);
    } else {
      // 向上滚动 - 上一个视频
      scrollToVideo(currentVideoIndex - 1);
    }
  });
  
  // 键盘控制
  document.addEventListener('keydown', function(e) {
    // ESC键停止播放
    if (e.code === 'Escape') {
      const playingVideos = document.querySelectorAll('.bili-lite.is-playing');
      playingVideos.forEach(card => {
        card.classList.remove('is-playing');
        const iframe = card.querySelector('iframe');
        if (iframe) {
          iframe.remove();
        }
      });
    }
    
    // 上下箭头键切换视频
    if (e.code === 'ArrowDown') {
      e.preventDefault();
      scrollToVideo(currentVideoIndex + 1);
    }
    if (e.code === 'ArrowUp') {
      e.preventDefault();
      scrollToVideo(currentVideoIndex - 1);
    }
  });
  
  // 触摸滑动支持（移动端）
  let startY = 0;
  let endY = 0;
  
  document.addEventListener('touchstart', function(e) {
    startY = e.touches[0].clientY;
  });
  
  document.addEventListener('touchend', function(e) {
    endY = e.changedTouches[0].clientY;
    const diff = startY - endY;
    
    if (Math.abs(diff) > 50) { // 最小滑动距离
      if (diff > 0) {
        // 向上滑动 - 下一个视频
        scrollToVideo(currentVideoIndex + 1);
      } else {
        // 向下滑动 - 上一个视频
        scrollToVideo(currentVideoIndex - 1);
      }
    }
  });
  
  // 监听滚动事件，更新回到顶部按钮显示状态
  function updateBackToTopButton() {
    const backToTopBtn = document.getElementById('backToTop');
    if (backToTopBtn) {
      // 当滚动到2024年视频（索引1）或更后面的视频时显示按钮
      if (currentVideoIndex >= 1) {
        backToTopBtn.classList.add('is-visible');
      } else {
        backToTopBtn.classList.remove('is-visible');
      }
    }
  }
  
  // 监听页面滚动事件
  window.addEventListener('scroll', updateBackToTopButton, { passive: true });
  
  // 初始化时检查按钮状态
  updateBackToTopButton();
});
  </script>

