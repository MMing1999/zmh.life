---
layout: layouts/base.njk
---
<article class="entry">
  <header class="entry-head">
    <h1 class="entry-title">{{ title }}</h1>
    <p class="entry-meta">{{ date | fmtDate }}</p>
    {% if summary %}<p class="entry-summary">{{ summary }}</p>{% endif %}
    {% if cover %}<img class="entry-cover" src="{{ cover }}" alt="">{% endif %}
  </header>
  <div class="entry-body">
    {{ content | safe }}
  </div>
</article>
